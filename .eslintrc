{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true,
        "node": true
    },
    "ignorePatterns": ["dist/*"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "extends": ["eslint:recommended"],
    "plugins": ["jest"],
    "rules": {
        "no-console": ["error", { "allow": ["warn", "error"] }]
    }
}
